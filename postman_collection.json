{
  "info": {
    "name": "Blog Platform API - Complete",
    "description": "Complete API collection for Blog Platform with RBAC",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "author_token",
      "value": ""
    },
    {
      "key": "admin_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Author",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\"email\":\"author@test.com\",\"password\":\"Author123!\",\"name\":\"Test Author\",\"userType\":\"AUTHOR\"}"},
            "url": {"raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"]}
          }
        },
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\"email\":\"admin@test.com\",\"password\":\"Admin123!\",\"name\":\"Test Admin\",\"userType\":\"ADMIN\"}"},
            "url": {"raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"]}
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\"email\":\"author@test.com\",\"password\":\"Author123!\"}"},
            "url": {"raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"]}
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{author_token}}"}],
            "url": {"raw": "{{base_url}}/auth/me", "host": ["{{base_url}}"], "path": ["auth", "me"]}
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "List Published Articles",
          "request": {
            "method": "GET",
            "url": {"raw": "{{base_url}}/articles", "host": ["{{base_url}}"], "path": ["articles"]}
          }
        },
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{author_token}}"}],
            "body": {"mode": "raw", "raw": "{\"title\":\"My Article\",\"content\":\"Full content here\",\"description\":\"Short desc\"}"},
            "url": {"raw": "{{base_url}}/articles", "host": ["{{base_url}}"], "path": ["articles"]}
          }
        },
        {
          "name": "Publish Article",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{author_token}}"}],
            "url": {"raw": "{{base_url}}/articles/1/publish", "host": ["{{base_url}}"], "path": ["articles", "1", "publish"]}
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "List Comments",
          "request": {
            "method": "GET",
            "url": {"raw": "{{base_url}}/comments/article/1", "host": ["{{base_url}}"], "path": ["comments", "article", "1"]}
          }
        },
        {
          "name": "Create Comment (Admin)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{admin_token}}"}],
            "body": {"mode": "raw", "raw": "{\"content\":\"Great article!\",\"articleId\":1}"},
            "url": {"raw": "{{base_url}}/comments", "host": ["{{base_url}}"], "path": ["comments"]}
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "List All Users",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{admin_token}}"}],
            "url": {"raw": "{{base_url}}/admin/users", "host": ["{{base_url}}"], "path": ["admin", "users"]}
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{admin_token}}"}],
            "body": {"mode": "raw", "raw": "{\"userType\":\"ADMIN\"}"},
            "url": {"raw": "{{base_url}}/admin/users/1/role", "host": ["{{base_url}}"], "path": ["admin", "users", "1", "role"]}
          }
        }
      ]
    }
  ]
}
